# Chart Generation API Configuration

# Server Configuration
HOST=0.0.0.0
PORT=1234
WORKERS=1
LOG_LEVEL=info

# Application Settings
APP_NAME=Chart Generation API
APP_VERSION=1.0.0
DEBUG=false

# CORS Configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Chart Default Settings
DEFAULT_CHART_WIDTH=10
DEFAULT_CHART_HEIGHT=8
DEFAULT_CHART_DPI=100

# Matplotlib Configuration
MPL_BACKEND=Agg
MPL_FONT_FAMILY=sans-serif
MPL_FONT_SANS_SERIF=Arial,DejaVu Sans

# Docker Configuration
CONTAINER_NAME=chart-api-ngoc
RESTART_POLICY=always
